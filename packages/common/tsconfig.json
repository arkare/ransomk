{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "inlineSourceMap": false,
    "noEmit": false,
    "esModuleInterop": true
  },
  "exclude": ["test/*", "build/*"],
  "ts-node": {
    "cwd": "./",
    "projectSearchDir": "./",
    "require": [],
    "project": "./tsconfig.json"
  }
}
